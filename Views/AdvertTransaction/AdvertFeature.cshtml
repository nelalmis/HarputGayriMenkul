@{
    ViewBag.Title = "İlan Özellikleri";
    Layout = "~/Views/Shared/_AdminAnasayfaLayout.cshtml";
}
<!DOCTYPE html>

<html lang="tr">


<head>
    @section Head{
        <meta charset="utf-8" />
        <style>
            .field-validation-error {
                color: Red;
            }

            .validation-summary-errors {
                font-weight: bold;
                color: Red;
            }

            .table-ozellik {
                width: initial;
                height: auto;
            }

            .sec {
                width: 20px;
            }

            .isim {
                width: 170px;
            }
        </style>

    }

    <title>İlan Detayları
    </title>
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Advert</legend>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>İlan Ekleme Formu
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>
                <div class="portlet-body form">
                    @using (Html.BeginForm("AdvertFeature", "AdvertTransaction", FormMethod.Post, new { @class = "form-body" }))
                    {
@*<form class="form-horizontal" action="/Admin/AdvertIns" method="post">*@
                        <div class="form-body">
                            <h3 class="form-section">İlanın İç Özellikleri</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <div class="col-md-15">
                                            @{
                        int i = 0;
                                            }
                                            @while (i < ViewBag.InternalFeatureList.Count)
                                            {
                                                <table class="table-ozellik">
                                                    <tr>
                                                        <td class="sec">
                                                            <input name="chcInternalFeature" type="checkbox" Value="@ViewBag.InternalFeatureList[i].ID"/>
                                                        </td>
                                                        <td class="isim">
                                                            @ViewBag.InternalFeatureList[i++].FeatureName
                                                        </td>

                                                        @if (i < ViewBag.InternalFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcInternalFeature" type="checkbox" Value="@ViewBag.InternalFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.InternalFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.InternalFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcInternalFeature" type="checkbox" Value="@ViewBag.InternalFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.InternalFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.InternalFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcInternalFeature" type="checkbox" Value="@ViewBag.InternalFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.InternalFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.InternalFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcInternalFeature" type="checkbox" Value="@ViewBag.InternalFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.InternalFeatureList[i++].FeatureName
                                                            </td>
                                                        }

                                                    </tr>
                                                </table>
                                                    
                                                
                                            }

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->

                                <!--/span-->
                            </div>
                            <br />
                            <h3 class="form-section">İlanın Dış Özellikleri</h3>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <div class="col-md-15">
                                            @{
                                            i = 0;
                                            }
                                            @while (i < ViewBag.ExteriorFeatureList.Count)
                                            {
                                                <table class="table-ozellik">
                                                    <tr>
                                                        <td class="sec">
                                                            <input name="chcExteriorFeature" type="checkbox" Value="@ViewBag.ExteriorFeatureList[i].ID"/>
                                                        </td>
                                                        <td class="isim">
                                                            @ViewBag.ExteriorFeatureList[i++].FeatureName
                                                        </td>

                                                        @if (i < ViewBag.ExteriorFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcExteriorFeature" type="checkbox" Value="@ViewBag.ExteriorFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.ExteriorFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.ExteriorFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcExteriorFeature" type="checkbox" Value="@ViewBag.ExteriorFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.ExteriorFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.ExteriorFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcExteriorFeature" type="checkbox" Value="@ViewBag.ExteriorFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.ExteriorFeatureList[i++].FeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.ExteriorFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcExteriorFeature" type="checkbox" Value="@ViewBag.ExteriorFeatureList[i].ID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.ExteriorFeatureList[i++].FeatureName
                                                            </td>
                                                        }


                                                    </tr>

                                                </table>
                                                    
                                                
                                            }

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->

                                <!--/span-->
                            </div>
                            <h3 class="form-section">İlanın Çevresel Özellikleri</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <div class="col-md-15">
                                            @{
                                            i = 0;
                                            }
                                            @while (i < ViewBag.EnvironmentFeatureList.Count)
                                            {
                                                <table class="table-ozellik">
                                                    <tr>
                                                        <td class="sec">
                                                            <input name="chcEnvironmentFeature" type="checkbox" Value="@ViewBag.EnvironmentFeatureList[i].EnvironmentFeatureID"/>
                                                        </td>
                                                        <td class="isim">
                                                            @ViewBag.EnvironmentFeatureList[i++].EnvironmentFeatureName
                                                        </td>

                                                        @if (i < ViewBag.EnvironmentFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcEnvironmentFeature" type="checkbox" Value="@ViewBag.EnvironmentFeatureList[i].EnvironmentFeatureID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.EnvironmentFeatureList[i++].EnvironmentFeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.EnvironmentFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcEnvironmentFeature" type="checkbox" Value="@ViewBag.EnvironmentFeatureList[i].EnvironmentFeatureID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.EnvironmentFeatureList[i++].EnvironmentFeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.EnvironmentFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcEnvironmentFeature" type="checkbox" Value="@ViewBag.EnvironmentFeatureList[i].EnvironmentFeatureID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.EnvironmentFeatureList[i++].EnvironmentFeatureName
                                                            </td>
                                                        }
                                                        @if (i < ViewBag.EnvironmentFeatureList.Count)
                                                        {
                                                            <td class="sec">
                                                                <input name="chcEnvironmentFeature" type="checkbox" Value="@ViewBag.EnvironmentFeatureList[i].EnvironmentFeatureID"/>
                                                            </td>
                                                            <td class="isim">
                                                                @ViewBag.EnvironmentFeatureList[i++].EnvironmentFeatureName
                                                            </td>
                                                        }


                                                    </tr>

                                                </table>
                                                    
                                                
                                            }

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->

                                <!--/span-->
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                @using (Html.BeginForm())
                                                {
                                                    <button type="submit" class="btn green" id="btnPrev" name="btnPrev" value="Prev">Prev</button>
                                                    <button type="submit" class="btn green" id="btnNext" name="btnNext" value="Next">Next</button>
                                                    <div style="color: Red; font-size: 14px">@ViewBag.Message</div>
                                                
                                                }

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                    <!-- END FORM-->
                </div>
            </div>
        </fieldset>
    }
    <script src="~/Content/assets/global/plugins/jquery-1.11.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var Secililer = [];

            $("#btnNext").click(function () {
                $.seciliSatirlarIc = $("input[type='checkbox'][name='chcInternalFeature']:checked");
                $.seciliSatirlarDis = $("input[type='checkbox'][name='chcExteriorFeature']:checked");
                $.seciliSatirlarCevre = $("input[type='checkbox'][name='chcEnvironmentFeature']:checked");
                if ($.seciliSatirlarIc.length / 0) {
                    for (var i = 0; i < $.seciliSatirlarIc.length; i++) {
                        Secililer.push($.seciliSatirlarIc[i].value);
                        //$.seciliIdlerIc += $.seciliSatirlarIc[i].value;
                        //if (i != $.seciliSatirlarIc.length - 1)
                        //    $.seciliIdlerIc += ",";
                    }

                }
                Secililer.push('#');
                if ($.seciliSatirlarDis.length / 0) {
                    for (var i = 0; i < $.seciliSatirlarDis.length; i++) {
                        Secililer.push($.seciliSatirlarDis[i].value);
                    }
                }
                Secililer.push('/');
                if ($.seciliSatirlarCevre.length / 0) {
                    for (var i = 0; i < $.seciliSatirlarCevre.length; i++) {
                        Secililer.push($.seciliSatirlarCevre[i].value);
                    }
                }
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SeciliOzelliklerAdd", "AdvertTransaction")',
                    data: { SeciliOzellikler: Secililer },
                    dataType: "json",
                    traditional: true,
                    succcess: function (data) {
                        alert("İşlem başarılı");

                    }


                });




            });


        });

    </script>
</body>
</html>
